{
    "name": "ris-api",
    "version": "1.0.0",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Muhammad Ghufran",
        "email": "Ghufranbakrie@gmail.com",
        "url": "https://github.com/gufriends"
    },
    "publisher": "@gufriends",
    "description": "RIS (Radiology Information System) API built with Hono and Bun",
    "repository": "https://github.com/haykal-fe-verd/ris-api",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "build": "bun build src/index.ts --compile --outfile=dist/ris-api",
        "start": "bun run src/index.ts",
        "start:prod": "bun run db:push && bun run src/index.ts",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx drizzle-kit migrate",
        "db:push": "bunx drizzle-kit push",
        "db:seed": "bun run src/database/seed.ts",
        "db:studio": "bunx drizzle-kit studio",
        "biome:check": "bunx biome check",
        "biome:fix": "bunx biome check --write",
        "orthanc:sync": "bun run scripts/sync-patients.ts"
    },
    "dependencies": {
        "@faker-js/faker": "^10.1.0",
        "@hono/zod-openapi": "^1.1.5",
        "@hono/zod-validator": "^0.7.4",
        "@scalar/hono-api-reference": "^0.9.24",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.10.6",
        "hono-pino": "^0.10.3",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "stoker": "^2.0.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.6",
        "@types/bun": "latest",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/pg": "^8.15.6",
        "drizzle-kit": "^0.31.7"
    }
}
